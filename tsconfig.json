{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    ".idea"
  ]
}
